@{
    ViewData["Title"] = "Login";
}

  <!-- ************ FORMULÃRIO LOGIN ************ -->
    <article class="bk-login">
      <div class="form-box">
        <h1>Entre na Biblio Tec</h1>
        <form style="width: 60%; display: flex; flex-direction: column; " class="formulario" method="post" action="@Url.Action("Logar")">
            <label class="frm-label" for="email">E-mail</label>
            <input type="email" id="email" class="frm-input" placeholder="email@alunosenai.com" name="Email">
            <label class="frm-label" for="senha">Senha</label>
            <input type="password" name="Senha" id="senha" class="frm-input" placeholder="*******">
            <a href="#" class="esqueci-senha">Esqueci minha senha</a>
            <button type="submit" class="btn-entrar">Entrar</button>
        </form>
      </div>
      
    </article>